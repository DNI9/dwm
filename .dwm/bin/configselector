#!/bin/bash

TEXTEDIT="st -e nvim"
declare -a options=(
"AutoStart Script - ~/.dwm/bin/autostart.sh"
"DWM scripts - ~/.dwm/bin/"
"Config selector - ~/.dwm/bin/configselector"
"NeoVim Config - $HOME/.config/nvim/init.vim"
"NeoVim Snippets - $HOME/.config/nvim/UltiSnips"
"Picom config - ~/.dwm/picom.conf"
"SXHKD keybinds - ~/.dwm/sxhkdrc"
"Xinitrc - $HOME/.xinitrc"
"Zsh aliases - $HOME/.zshrc-personal"
"Zshrc - $HOME/.zshrc"
)

choice=$(printf '%s\n' "${options[@]}"| dmenu -i -h 30 -p 'Edit config:')
if [[ "$choice" == "quit" ]]; then
	echo "Program terminated." && exit 1
elif [ "$choice" ]; then
	cfg=$(printf '%s\n' "${choice}" | awk '{print $NF}')
	$TEXTEDIT $cfg
else
	echo "Program terminated." && exit 1
fi
