# Take a screenshot of your entire screen
super + Print
	takeshot --area

Print
	takeshot --now

# Disable the touchpad
super + Delete
	~/.dwm/bin/toggletouchpad.sh

# Logout Tool
super + x
	~/.config/rofi/bin/powermenu

# Opens dmenu prompt
super + d
	~/.config/rofi/bin/launcher

# opens clipboard rofi menu
super + shift + v
	~/.config/rofi/bin/clipboard

# Alacritty (terminal)
super + Return
	alacritty

# Opens brave browser
super + w
	brave

# File Manager
super + f
	thunar

# Quickly clear your clipboard
super + BackSpace
	printf '' | xclip -selection clipboard

# Pulsemixer - Terminal audio manager
super + v
  pavucontrol

# XKill - kills any x window
super + shift + Escape
  xkill

# Reload your sxhkd keybinds
super + shift + s
	pkill -USR1 -x sxhkd

XF86AudioPlay
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

XF86AudioStop
	playerctl stop

XF86AudioRaiseVolume
	volume --inc

XF86AudioLowerVolume
	volume --dec

XF86AudioMute
	volume --toggle

XF86MonBrightnessUp
	brightnessctl set 5%+

XF86MonBrightnessDown
	brightnessctl set 5%-

# Toggle compositor (picom-jonaburg-git)
ctrl + alt + o
	~/.dwm/bin/picom-toggle.sh

# Lock your computer
ctrl + alt + l
	betterlockscreen -l blur
